<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="3.3" type="template" client="site" method="upgrade">
	
	<name>JMaterialized</name>
	<creationDate>2017-02-07</creationDate>
	<author>Mike Brandner</author>
	<copyright>Copyright © 2017 coolwebcreations.de</copyright>
	<authorEmail>mike@coolwebcreations.de</authorEmail>
	<authorUrl>http://www.coolwebcreations.de</authorUrl>
	<version>0.1.0</version>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description><![CDATA[ 
		<h1>JMaterialized Template</h1>
    <p>Google´s Material Design for Joomla!<br /><span style="color:blue">based on materialize CSS framework</span></p>
		<p>Created by <a href="http://www.coolwebcreations.de" target="_blank">Mike Brandner | coolwebcreations.de</a>.</p>
	]]></description>
	<updateservers>
		<server type="template" priority="1" name="JMaterialized Update Site">https://raw.githubusercontent.com/m-b-o/jmaterialized/master/manifest.xml</server>
	</updateservers>
	
	<files>
		<folder>css</folder>
		<folder>font</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions>
		<position>top-navigation</position>
        	<position>parallax</position>
        	<position>breadcrumb</position>
		<position>section1</position>
        	<position>section2</position>
        	<position>section3</position>
		<position>section4</position>
        	<position>section5</position>
        	<position>section6</position>
		<position>footer1</position>
		<position>footer2</position>
		<position>footer3</position>
        	<position>debug</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="content" label="Header Configurations">
				<field
					name="logo_url"
					type="text"
					default=""
					label="URL Logo"
					description=""
					size="30"
				/>
				<field
					name="nav_suffix"
					type="text"
					default=""
					label="Top Navigation CSS Classes"
					description=""
					size="30"
				/>
			</fieldset>
			<fieldset name="content" label="Footer Configurations">
				<field
					name="footer_suffix"
					type="text"
					default=""
					label="Footer CSS Classes"
					description=""
					size="30"
				/>
			</fieldset>
		</fields>
	</config>

</extension>
